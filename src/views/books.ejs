    <link rel='stylesheet' href='css/books.css'>
</head>
<body>

    <!--Navbar-->
    <% include header %>
    <!--Navbar end-->
    
    <h1 class="display-2 bg-img text-white bg-overlay text-center">Books</h1>




   

    <section class="deck">

        <%for(let i=0;i<books.length;i++){%>
            <div class="container py-3">
              <div class="card">
                <div class="row ">
                  <div class="col-md-4 pic">
                      <img class="rounded-circle"  src="/images/<%=books[i].image%>" class="w-100">
                    </div>
                    <div class="col-md-8 px-3 about">
                      <div class="card-block px-3">
                        <h4 class="card-title"><%=books[i].title%></h4>
                        Author : <%=books[i].author%>
                        <hr>
                        <!-- <p class="card-text">Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p> -->

                        <a href="/books/<%=books[i]._id%>" class="btn btn-info btn-sm">Read More</a>
                      </div>
                    </div>
          
                  </div>
                </div>
              </div>
            </div>

            <%}%> 
    </section>

 

<br>


